<div class="container">
	<div class="hstack">
		<div class="left">
			<h2>I'm good at...</h2>
		</div>
		<div class="right">
			<h2><span id="skill" class="text-gradient"> Devops</span></h2>
		</div>
	</div>
</div>

<script>
	const skills = [
		"Devops",
		"Cloud Architecture (AWS)",
		"Continous Integration",
		"Typescript",
		"Docker",
		"Ansible",
		"Web Development",
		"Serverless",
	];

	let currentSkillIndex = 0;
	const defaultInterval = 2900;
	const firstSkillInterval = 12000;

	function changeSkill() {
		currentSkillIndex = (currentSkillIndex + 1) % skills.length;
		const element = document.getElementById("skill");
		if (element != null) {
			element.innerText = skills[currentSkillIndex];
		}
		let interval =
			currentSkillIndex === 0 ? firstSkillInterval : defaultInterval;
		setTimeout(changeSkill, interval);
	}

	setTimeout(changeSkill, firstSkillInterval);
</script>

